<section class=" gradient-custom py-5">
  <div class="container py-3">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-10">
        <div class="card" style="border-radius: 10px;">

          <div class="card-body p-4">
            <div class="card shadow-0 border mb-4" style="background-color: #dbcc8f;">
              <div class="card-body">
                <div class="row">

                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">Product</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">Product Name</p>
                  </div>

                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Product Description</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Quantity</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Price</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">Total</p>
                  </div>
                </div>

              </div>
            </div>

            {{#each order.orderItems}}


            <div class="card shadow-0 border mb-4 ">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-2">
                    <img src="/images/productimg/{{this.product.productimage}}" class="img-fluid" alt="Shoe">
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.product.productname}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0">{{this.product.productdescription}}</p>
                  </div>

                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.quantity}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                    <p class="text-muted mb-0 small">{{this.product.productprice}}</p>
                  </div>
                  <div class="col-md-2 text-center d-flex justify-content-center align-items-center">Rs.
                    <p class="text-muted mb-0 small">{{total this.product.productprice this.quantity}}</p>
                  </div>
                </div>


              </div>
            </div>
            {{/each}}

            <div class="card shadow-0 border mb-4 ">
              <div class="card-body">
                <div class="row">




                  <div class="row d-flex align-items-center">
                    <div class="col-md-2">
                      <p class="text-muted mb-0 small">Track Order</p>
                    </div>
                    <div class="col-md-10">
                      {{#if (eq order.orderStatus 'shipped')}}
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 40%; border-radius: 16px; background-color: #dbcc8f;" aria-valuenow="0"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      {{else if (eq order.orderStatus 'Placed')}}
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 20%; border-radius: 16px; background-color: #dbcc8f;" aria-valuenow="0"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      {{else if (eq order.orderStatus 'arriving')}}
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 65%; border-radius: 16px; background-color: #dbcc8f;" aria-valuenow="0"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      {{else if (eq order.orderStatus 'delivered')}}
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 100%; border-radius: 16px; background-color: #dbcc8f;" aria-valuenow="0"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      {{else}}
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div class="progress-bar" role="progressbar"
                          style="width: 100%; border-radius: 16px; background-color: #f80b0b;" aria-valuenow="0"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>

                        {{/if}}
                        <div class="d-flex justify-content-around mb-1">
                          {{#if (eq order.orderStatus 'cancelled')}}
                             <p class="text-muted mt-1 mb-0 small ms-xl-5">Order Cancelled</p>
                          {{else}}
                          <p class="text-muted mt-1 mb-0 small ms-xl-5">placed</p>
                           <p class="text-muted mt-1 mb-0 small ms-xl-5">shipped</p>
                            <p class="text-muted mt-1 mb-0 small ms-xl-5">arriving</p>
                         
                          <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                          {{/if}}
                        </div>
                      </div>
                    </div>


                  </div>


                </div>
              </div>



              <div class="d-flex justify-content-end pt-2">

                <p class="text-muted mb-0"><span class="fw-bold ">
                    <h3>Order Details</h3>
                  </span></p>
              </div>

              <div class="d-flex justify-content-end pt-2">

                <p class="text-muted mb-0"><span class="fw-bold me-4">Total : </span> Rs.{{order.Total}}</p>
              </div>

              <div class="d-flex justify-content-end pt-2">

                {{#if order.discount}}
                <p class="text-muted mb-0"><span id="couponDiscount" class="fw-bold me-4">Discount :
                  </span>Rs.-{{order.discount}}</p>
                {{else}}
                <p class="text-muted mb-0"><span id="couponDiscount" class="fw-bold me-4">Discount :</span>Rs.0</p>
                {{/if}}
              </div>

              <div class="d-flex justify-content-end pt-2">
                <p class="text-muted mb-0"></p>
                <p class="text-muted mb-0"><span class="fw-bold me-4">Order Date : </span> {{order.date}}</p>
              </div>

              <div class="d-flex justify-content-between mb-5">
                <p class="text-muted mb-0"></p>
                <p class="text-muted mb-0"><span id="shipping" class="fw-bold me-4">Delivery Charges
                    :</span>Rs.{{order.shipping}}</p>
              </div>
            </div>
            <div class="card-footer border-0 px-4 py-3"
              style="background-color: #dbcc8f; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              {{#if (eq order.paymentDetails 'online')}}
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                paid: <span id="grandTotal" class="h2 mb-0 ms-2">Rs.{{order.totalPrice}}</span></h5>
              {{else}}
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                payable: <span id="grandTotal" class="h2 mb-0 ms-2">Rs.{{order.totalPrice}}</span></h5>
              {{/if}}
            </div>

          </div>
        </div>
      </div>
    </div>
</section>